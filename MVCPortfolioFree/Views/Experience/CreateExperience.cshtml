@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Ekleme Paneli</div>
					</div>
					<form method="post">
						<div class="card-body">
							<div class="form-group form-inline">
								<label for="headertext" class="col-md-3 col-form-label">Firma Adı</label>
								<div class="col-md-9 p-0">
									<input type="text" class="form-control input-full" asp-for="HeaderText" id="headertext" placeholder="Firma adını giriniz..">
								</div>
							</div>
							<div class="form-group form-inline">
								<label for="title" class="col-md-3 col-form-label">Ünvan</label>
								<div class="col-md-9 p-0">
									<input type="text" class="form-control input-full" asp-for="Title" id="title" placeholder="Ünvanınızı giriniz..">
								</div>
							</div>
							<div class="form-group form-inline">
								<label for="startdate" class="col-md-3 col-form-label">Başlangıç Tarihi</label>
								<div class="col-md-9 p-0">
									<input type="date" class="form-control input-full" asp-for="StartDate" id="startdate">
								</div>
							</div>
							<div class="form-group form-inline">
								<label for="enddate" class="col-md-3 col-form-label">Bitiş Tarihi</label>
								<div class="col-md-9 p-0">
									<input type="date" class="form-control input-full" asp-for="EndDate" id="enddate">
								</div>
							</div>
							<div class="form-group">
								<label for="description">Açıklama</label>
								<textarea class="form-control" asp-for="Description" id="description" rows="5"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ekle</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

