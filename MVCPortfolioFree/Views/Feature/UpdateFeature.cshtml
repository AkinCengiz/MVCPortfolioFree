@model Feature
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Güncelleme Paneli</div>
					</div>
					<form method="post">
						<div class="card-body">
							<div class="form-group">
								<div class="col-md p-0">
									<input type="hidden" asp-for="Id" id="contactid">
								</div>
							</div>
							<div class="form-group">
								<label for="title" class="col-md-3 col-form-label">Başlık</label>
								<div class="col-md p-0">
									<input type="text" class="form-control input-full" asp-for="Title" id="title" placeholder="Başlık giriniz..">
								</div>
							</div>
							<div class="form-group">
								<label for="description">Açıklama</label>
								<textarea class="form-control" asp-for="Description" id="description" rows="5"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Güncelle</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


